/**app.wxss**/

.select-des {
  font-size: 14px;
  color: #666;
  padding: 20px;
}
.applet-collapse-item {
  padding: 0 15px !important;
  margin: -1px 0;
}
.applet-cell {
  justify-content: space-between;
}
.applet-cell > .van-cell__title,
.applet-cell > .van-cell__value {
  flex: unset;
}

.result-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  /* opacity: .9; */
  display: none;
}

.result-wrap.show {
  display: block;
}

.result-wrap .close {
  position: absolute;
  top: 30px;
  right: 30px;
}

.result-wrap .main {
  position: absolute;
  top: calc( 50% - 100px );
  left: calc( 50% - 100px );
  width: 200px;
  height: 200px;
  border-radius: 50%;
  overflow: hidden;
  /* background-color: #f9f9f9; */
  box-shadow: inset 0 0 20px 1px #fdfdfd;
  display: flex;
}

.selected-list {
  width: 100%;
}

.selected-list .selected-item {
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: #aaaa;
}

