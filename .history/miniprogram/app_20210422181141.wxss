/**app.wxss**/

.select-title {
  padding: 20px;
  font-size: 18px;
  color: #333333;
}
.select-des {
  font-size: 14px;
  color: #666;
  padding: 20px;
}
.applet-collapse-item {
  padding: 0 15px !important;
  margin: -1px 0;
}
.applet-cell {
  justify-content: space-between;
}
.applet-cell > .van-cell__title,
.applet-cell > .van-cell__value {
  flex: unset;
}

.result-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  /* opacity: .9; */
  display: none;
}

.result-wrap.show {
  display: block;
}

.result-wrap .close {
  position: absolute;
  top: 30px;
  right: 30px;
}

.result-wrap .main {
  position: absolute;
  top: calc( 50% - 125px );
  left: calc( 50% - 150px );
  width: 300px;
  height: 250px;
  border-radius: 50%;
  overflow: hidden;
  /* background-color: #f9f9f9; */
  /* box-shadow: inset 0 0 10px 1px #fafafa; */
  display: flex;
}

.selected-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
  line-height: 50px;
  text-align: center;
  font-size: 36px;
}

.selected-list .selected-item {
  width: 100%;
  color: #aaaa;
}

.selected-list .selected-item:nth-child(3),
.selected-list .result {
  width: 100%;
  font-size: 42px;
  font-weight: bold;
  color: #1989fa;
}

